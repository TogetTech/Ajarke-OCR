<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ViewDataActivity">


    <androidx.core.widget.NestedScrollView
        android:background="@color/blackText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="vertical"
            android:background="#00000000"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:id="@+id/rela1"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/chauffeur"
                    android:text="Chauffeur"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/brandon_medium"
                    android:textSize="22dp"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view3"
                    android:layout_below="@+id/chauffeur"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    android:layout_width="150dp"
                    android:layout_height="0.5dp"/>

                <RelativeLayout
                    android:layout_below="@+id/view3"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nom_chauffeur"
                        android:text="POUM Bimbar"
                        android:textColor="@color/black"
                        android:fontFamily="@font/brandon_medium"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/numero_cni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nom_chauffeur"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/brandon_medium"
                        android:text="Numero CNI"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/numero_permis"
                        android:text="Numero Permis"
                        android:fontFamily="@font/brandon_medium"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:layout_below="@+id/numero_cni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>



                <ImageView
                    android:id="@+id/image_chauffeur"
                    android:src="@drawable/ic_account"
                    android:layout_alignParentEnd="true"
                    android:layout_width="150dp"
                    android:layout_height="180dp"/>

                <View
                    android:id="@+id/view1"
                    android:layout_below="@+id/image_chauffeur"
                    android:background="@color/silver"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/text1"
                    android:padding="15dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/view1"
                    android:text="Agence information"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view2"
                    android:layout_below="@+id/text1"
                    android:background="@color/silver"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <RelativeLayout
                    android:id="@+id/rela2"
                    android:layout_below="@+id/view2"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:text="Nom : "
                        android:fontFamily="@font/brandon_medium"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/agnce_nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandon_medium"
                        android:text="Nom de l'agence"
                        android:layout_toEndOf="@+id/name"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/imm"
                        android:layout_below="@+id/name"
                        android:text="Immatriculation : "
                        android:fontFamily="@font/brandon_medium"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/immatriculation"
                        android:layout_below="@id/agnce_nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandon_medium"
                        android:text="CE02HJMN ML"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/imm"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/num"
                        android:layout_below="@+id/imm"
                        android:text="NumÃ©ro bus : "
                        android:fontFamily="@font/brandon_medium"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/numero_bus"
                        android:layout_below="@id/imm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandon_medium"
                        android:text="CE02HJMN ML"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/num"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dest"
                        android:layout_below="@+id/numero_bus"
                        android:text="Destination : "
                        android:fontFamily="@font/brandon_medium"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/destination"
                        android:layout_below="@id/numero_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandon_medium"
                        android:text="CE02HJMN ML"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/num"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_below="@+id/rela2"
                    android:layout_marginTop="10dp"
                    android:background="@color/silver"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <RelativeLayout
                    android:id="@+id/rela3"
                    android:padding="15dp"
                    android:layout_below="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/passager"
                        android:text="Passagers"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/brandon_medium"
                        android:textSize="22dp"
                        android:textAllCaps="true"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:id="@+id/view5"
                        android:layout_below="@+id/passager"
                        android:background="@color/colorPrimary"
                        android:layout_marginBottom="10dp"
                        android:layout_width="150dp"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:id="@+id/nbre"
                        android:text="Nombre de passagers : "
                        android:layout_below="@+id/view5"
                        android:fontFamily="@font/brandon_medium"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/nombre_passager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/brandon_medium"
                        android:text="65"
                        android:layout_below="@+id/view5"
                        android:layout_toEndOf="@+id/nbre"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text2"
                        android:padding="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_below="@+id/view5"
                        android:layout_alignParentEnd="true"
                        android:text=" Liste"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_view"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_below="@+id/rela3"
                    android:layout_marginTop="10dp"
                    android:background="@color/silver"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/text3"
                    android:padding="15dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/view6"
                    android:text="Rapport du poste"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>